<div class="total-info table-responsive px-0">
    <table class="table table-hover">
        <tbody>
            <tr class="col-12 px-0 order-subtotal d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.SubTotal"):</span>
                </td>
                <td class="col-6 cart-total-right  text-right">
                    <span class="value-summary">{{cart.SubTotal}}</span>
                </td>
            </tr>
            <tr v-if="cart.SubTotalDiscount !== null" class="col-12 px-0 order-subtotal-discount d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.SubTotalDiscount"):</span>
                </td>
                <td class="col-6 cart-total-right  text-right">
                    <span class="value-summary">{{cart.SubTotalDiscount}}</span>
                </td>
            </tr>
            <tr class="col-12 px-0 shipping-cost d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.Shipping"):</span>
                    <span v-if="cart.RequiresShipping && cart.SelectedShippingMethod !== null" class="selected-shipping-method">@T("ShoppingCart.Totals.Shipping.Method").Text.Replace("{0}", "{{cart.SelectedShippingMethod}}")</span>
                </td>
                <td class="col-6 cart-total-right  text-right">
                    <div v-if="cart.RequiresShipping">
                        <span v-if="cart.Shipping !== null">
                            {{cart.Shipping}}
                        </span>
                        <span v-else>
                            @T("ShoppingCart.Totals.CalculatedDuringCheckout")
                        </span>
                    </div>
                    <div v-else>
                        <span>@T("ShoppingCart.Totals.Shipping.NotRequired")</span>
                    </div>
                </td>
            </tr>
            <tr v-if="cart.PaymentMethodAdditionalFee !== null" class="col-12 px-0 additional-fees d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.PaymentMethodAdditionalFee"):</span>
                </td>
                <td class="col-6 cart-total-right text-right">
                    <span class="value-summary">{{cart.PaymentMethodAdditionalFee}}</span>
                </td>
            </tr>

            <tr v-if="cart.DisplayTaxRates && cart.TaxRates[0]" v-for="taxRate in cart.TaxRates" class="col-12 px-0 tax-rate d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>
                        @T("ShoppingCart.Totals.TaxRateLine").Text.Replace("{0}", "{{taxRate.Rate}}")
                    </span>
                </td>
                <td class="col-6 cart-total-right text-right">
                    <span>{{taxRate.Value}}</span>
                </td>
            </tr>
            <tr v-if="cart.DisplayTax" class="col-12 px-0 tax-value d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.Tax"):</span>
                </td>
                <td class="col-6 cart-total-right  text-right">
                    <span class="value-summary">{{cart.Tax}}</span>
                </td>
            </tr>
            <tr v-if="cart.OrderTotalDiscount !== null" class="col-12 px-0 discount-total d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.OrderTotalDiscount"):</span>
                </td>
                <td class="col-6 cart-total-right  text-right">
                    <span class="value-summary">{{cart.OrderTotalDiscount}}</span>
                </td>
            </tr>
            <tr v-if="cart.GiftCards[0]" v-for="gc in cart.GiftCards" class="col-12 px-0 giftcard-summary d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.GiftCardInfo"):</span>
                    <span>@T("ShoppingCart.Totals.GiftCardInfo.Code").Text.Replace("{0}", "{{gc.CouponCode}}")</span>
                    <span class="giftcard-remaining">@T("ShoppingCart.Totals.GiftCardInfo.Remaining").Text.Replace("{0}", "{{gc.Remaining}}")</span>
                </td>
                <td class="col-6 cart-total-right  text-right">
                    <span class="value-summary">{{gc.Amount}}</span>

                    <button v-if="cart.IsEditable" type="button" name="removegiftcard" id="remove-gift-card-button" onclick="removeGiftCard(this)">
                        @T("Common.Remove")
                    </button>
                </td>
            </tr>
            <tr v-if="cart.RedeemedRewardPoints > 0" class="col-12 px-0 reward-points d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.RewardPoints").Text.Replace("{0}", "{{cart.RedeemedRewardPoints}}")</span>
                </td>
                <td class="col-6 cart-total-right  text-right">
                    <span class="value-summary">{{cart.RedeemedRewardPointsAmount}}</span>
                </td>
            </tr>
            <tr class="col-12 px-0 order-total d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.OrderTotal"):</span>
                </td>
                <td class="col-6 cart-total-right  text-right">
                    <span v-if="cart.OrderTotal !== null" class="value-summary"><strong>{{cart.OrderTotal}}</strong></span>
                    <span v-else>@T("ShoppingCart.Totals.CalculatedDuringCheckout")</span>
                </td>
            </tr>
            <tr v-if="cart.WillEarnRewardPoints > 0" class="col-12 px-0 earn-reward-points d-flex justify-content-start">
                <td class="col-6 cart-total-left">
                    <span>@T("ShoppingCart.Totals.RewardPoints.WillEarn"):</span>
                </td>
                <td class="col-6 cart-total-right text-right">
                    <span class="value-summary">@T("ShoppingCart.Totals.RewardPoints.WillEarn.Point").Text.Replace("{0}", "{{cart.WillEarnRewardPoints}}")</span>
                </td>
            </tr>
        </tbody>
    </table>
</div>